{
    "name": "Ollama Assistant",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "An extension to call ollama.",
    "icons": {
        "16": "icons/llama.png",
        "32": "icons/llama.png",
        "48": "icons/llama.png",
        "128": "icons/llama.png"
    },
    "background": {
        "service_worker": "background.js"
      },
    "action": {
        "default_popup": "popup/index.html"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": [
            "custom-elements.min.js",
            "content.js"
          ]
        }
      ]
}